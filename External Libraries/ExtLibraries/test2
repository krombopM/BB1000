
import numpy as np
import pandas as pd

data = open('3IE9.pdb','r')
new_file = open('3IE9.extra_info', 'w')
df = []
for line in data.readlines():
    if 'HETATM' in line:
        df.append(line)
new_dataframe = []
for item in df:
    line = item.split()
    line[0] = line[-1]
    if line[-1] == "O":
        line[-1] = True
    else:
        line[-1] = False
    del line[9:11]
    del line[1:6]
    new_dataframe.append(line)
del new_dataframe[0]
df_other = pd.DataFrame(new_dataframe)
df_other.columns = ['Atom', 'X', 'Y', 'Z', 'OXY']
df_other.to_csv("3IE9.extra_info", sep=" ", index=False)
#print(df_other)





